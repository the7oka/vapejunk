<% content_for :head do %>
  <link rel="stylesheet" href="/assets/profile.scss">
  <script type="text/javascript" src='/assets/profile.js'></script>
  <script type="text/javascript" src='/assets/bootstrap-filestyle.min.js'></script>
<% end %>
<%= form_for @profile, url: {action: "edit"} do |f| %>
  <section class="container" style="background-color: black;height:150px;margin-bottom:50px;border-radius: 10px 10px 0px 0px;padding:0px">
    <div class="col-sm-12" style="color:white;padding:10px;padding-right:0px;margin-right:0px;display:flex;flex-direction: row;">
      <div class="col-sm-2">
      <%= image_tag @user.avatar.url(:medium), id: "profilePic" %>
      <div style=" position: absolute; top: 10px; left :30px;color:#006bb3"><%= f.file_field :avatar %></div>
      </div>
      <div class="col-sm-10 multipages" style="padding-right:0px;margin-right: 0px;">
        <ul id='ulx' style="padding-right:0px;margin-right: 0px">
          <li><a class="active" href="#home">placeholder1</a></li>
            <li><a href="#shoppingblacklist">placeholder2</a></li>
          <li><a href="#evolveddictionary">placeholder3</a></li>
          <li><a href="#garagak">placeholder4</a></li>
          <li><a href="#comicshop">placeholder5</a></li>
          <li><a href="#offers">placeholder6</a></li>
          <li><a href="#todolist">placeholder7</a></li>
          <li><a href="#jobhunter">placeholder8</a></li>
        </ul>
      </div>
    </div
  </section>
<section class="container">
  <div class="col-sm-4">
    <div class=" col-sm-12 infoContainer">
      <div style="padding:10px;padding-left:20px;font-size:120%;background-color:#eeeeee;margin-bottom:10px"><i class="fa fa-universal-access fa-lg" aria-hidden="true"></i> General info</div>
      <p><span class="para"><i class="fa fa-user-circle-o" aria-hidden="true"></i> Username</span><em> <%= f.text_field :username, autofocus: true, class: "form-control input-xs" %></em></p>
      <p><span class="para"><i class="fa fa-id-card" aria-hidden="true"></i> Name</span><em> <%= f.text_field :first_name, autofocus: true, class: "form-control input-xs",placeholder: 'first name' %> <%= f.text_field :last_name, autofocus: true, class: "form-control input-xs",placeholder: 'last name' %></em></p>
      <p><span class="para"><i class="fa fa-venus-mars" aria-hidden="true"></i> Gender</span><em> <%= f.select :gender,  User::GENDER_TYPES, {},{autofocus: true, class: "form-control input-xs"}%></em></p>
      <p><span class="para"><i class="fa fa-envelope" aria-hidden="true"></i> Email</span><em> <%= f.email_field :email, autofocus: true, class: "form-control input-xs", placeholder: 'example@example.com' %></em></p>
      <p><span class="para"><i class="fa fa-map-marker" aria-hidden="true"></i> Location</span><em> <%= f.text_field :location, autofocus: true, class: "form-control input-xs",placeholder: 'City, Country' %></em></p>
      <%= f.submit :Submit, class: 'btn btn-primary btn-sm hefzbutton' %>
    </div>
    <div class=" col-sm-12 infoContainer">
      <div style="padding:10px;padding-left:20px;font-size:120%;background-color:#eeeeee;margin-bottom:10px"><i class="fa fa-eye fa-lg" aria-hidden="true"></i> Photos</div>
      <p style="padding:20px"><i class="fa fa-heartbeat fa-lg" aria-hidden="true"></i> You have no photos to show but we're to blame for that.. Don't worry we're working on it!</p>
    </div>
  </div>
  <% end %>
</section>