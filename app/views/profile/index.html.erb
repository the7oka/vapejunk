<% content_for :head do %>
	<link href="/assets/profile.scss" rel="stylesheet">
	<style>
	p{
		margin:0px;
		padding:0px;
	}
	</style>
<% end %>
<section class="container">
<% @users.each do |u| %>
	<div class="row" >
		<div class="col-sm-3"></div>
		<a href='/profile/<%=u.id%>' class="col-sm-6" style="margin:10px;background:#e9e9e9;padding:10px;border-radius:5px;display:flex;flex-direction: row">
		<%= image_tag u.avatar.url(:medium), class: "profilePicall" %>
		<div style='display:flex;flex-direction: column;padding-left:10px'>
		<p>username : <%= u.username %></p>
		<p>first name : <%= u.first_name %></p>
		<p>last name : <%= u.last_name %></p>
		<p>gender : <%= u.gender %></p>
		<p>email : <%= u.email %></p>
		<p>provider : <%= u.provider %></p>
		<p>user id: <%= u.id %></p>
		</div>
		</a>
	</div>
<% end %>
</section>